@model IEnumerable<Models.ItemModel>

@{
    ViewData["Title"] = "ItemIndex";
}

<h1>Items Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productFromShopAModel.Shop.ShopName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productFromShopBModel.Shop.ShopName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productFromShopAModel.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productFromShopBModel.ProductPrice)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ItemId }) |
                @Html.ActionLink("Details", "Details", new { id=item.ItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ItemId })
            </td>
        </tr>
}
    </tbody>
</table>
